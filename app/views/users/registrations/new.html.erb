<main class="py-16 bg-[#F4F4F4]">
	<div class="container mx-auto">
		<section class="flex flex-row flex-nowrap justify-between text-[#6B6866]">
			<div class="flex flex-row flex-nowrap items-center">
				<%= heroicon "truck", size: 32 %>
				<div class="ms-4">
					<h3 class="text-2xl m-0">Free Shipping</h3>
					<p class="text-base m-0 font-light">Nationwide</p>
				</div>
			</div>
			<div class="flex flex-row flex-nowrap items-center">
				<%= heroicon "currency-dollar", size: 32 %>
				<div class="ms-4">
					<h3 class="text-2xl m-0">7 Day Returns</h3>
					<p class="text-base m-0 font-light">Moneyback Guarantee</p>
				</div>
			</div>
			<div class="flex flex-row flex-nowrap items-center">
				<%= heroicon "gift", size: 32 %>
				<div class="ms-4">
					<h3 class="text-2xl m-0">Discount/Vouchers</h3>
					<p class="text-base m-0 font-light">Selected Items Only</p>
				</div>
			</div>
			<div class="flex flex-row flex-nowrap items-center">
				<%= heroicon "credit-card", size: 32 %>
				<div class="ms-4">
					<h3 class="text-2xl m-0">Secure Payment</h3>
					<p class="text-base m-0 font-light">Powered by Stripe</p>
				</div>
			</div>
		</section>

		<div class="h-px bg-[#6B686659] w-full mt-4 mb-14"></div>

		<div class="bg-white border border-[#3A5033E5]
					w-3/5 mx-auto px-14 py-9 min-w-[300px] max-w-[600px]">
			<h2 class="text-[#4A4A4A] text-2xl">Create an Account</h2>

			<div class="bg-[#DDD9D9] h-px my-4"></div>

			<div class="flex flex-col gap-y-2">
				<button class="border border-[#3A5033E5] flex ps-24
							   py-2 w-full items-center gap-8">
					<%= image_tag "brands/Facebook/Logo/Primary/Facebook_Logo_Primary.png",
								  class: "w-8" %>
					Continue with Facebook
				</button>
				<button class="border border-[#3A5033E5] flex ps-24
							   py-2 w-full items-center gap-8">
					<%= image_tag "brands/Google/Search_GSA.original.png",
								  class: "w-8" %>
					Continue with Google
				</button>
				<p class="text-[#000000B2] text-xs">
					We will never post or share any of your
					information without your permission
				</p>
			</div>

			<p class="text-black my-4 text-center">Or</p>

			<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
				<%= render "users/shared/error_messages", resource: resource %>

				<div class="flex flex-col">
					<div class="flex flex-col gap-y-3">
						<%= f.label :full_name %>
						<%= f.text_field :full_name,
							autofocus: true,
							autocomplete: "name",
						 required: true %>
					</div>
					<div class="flex flex-col gap-y-3 my-8">
						<%= f.label :email %>
						<%= f.email_field :email, autocomplete: "email" %>
					</div>

					<div class="inline-flex flex-row gap-x-6">
						<div>
							<div class="mb-3">
								<%= f.label :password %>
							</div>
							<%= f.password_field :password,
							 autocomplete: "new-password",
							 class: "w-full" %>
						</div>

						<div>
							<div class="mb-3">
								<%= f.label :password_confirmation,
									"Confirm Password" %>
							</div>
							<%= f.password_field :password_confirmation,
							 autocomplete: "new-password",
							 class: "w-full" %>
						</div>
					</div>

					<div class="mt-8">
						<input type="checkbox"
							   class="size-5 appearance-none peer-hover:bg-none
									 checked:text-seraphique focus:ring-0
									 checked:ring-0 checked:bg-seraphique"
							   name="remember_me"
							   id="remember_me">
						<label for="remember_me"
							   class="ms-2 peer">
							Keep me signed in
						</label>
					</div>
					<div>
						<input type="checkbox"
							   class="size-5 appearance-none peer-hover:bg-none
									 checked:text-seraphique focus:ring-0
									 checked:ring-0 checked:bg-seraphique"
							   name="subscribe"
							   id="subscribe">
						<label for="subscribe"
							   class="text-xs ms-2 peer text-[#000000B2]">
							Subscribe now to receive exclusive promotions via
							email, SMS, and messaging apps from Seraphique! By
							subscribing, you agree to our use of your
							information for marketing communications and
							analytics, in accordance with our privacy policies.
						</label>
					</div>

					<div class="actions">
						<%= f.submit "Confirm and Continue",
						 class: "bg-seraphique text-base text-white w-full text-center py-2 mt-10" %>
					</div>
					<p class="text-center text-xs text-[#000000B2] font-light mt-2">
						By creating your account or signing in, you agree to
						our terms and condition & privacy policy.
					</p>
				</div>
			<% end %>
		</div>
	</div>
</main>
