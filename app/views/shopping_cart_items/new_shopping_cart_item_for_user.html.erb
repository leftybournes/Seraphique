<%= turbo_frame_tag dom_id(
	current_user,
	:shopping_cart_item_count
) do %>
  <div class="<%= class_names(
			  hidden: @count == 0
			  ) %> text-sm absolute -right-4 -top-2
			  bg-red-400 rounded-full px-2 count">
	<% if @count > 9 %>
	  9+
	<% else %>
	  <%= @count %>
	<% end %>
  </div>
<% end %>
