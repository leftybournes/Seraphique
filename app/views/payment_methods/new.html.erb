<main class="py-32">
  <div class="w-[600px] mx-auto bg-white py-8 px-24">
	<h2 class="font-bold text-[#4A4A4A] text-lg">Card Details</h2>
	<div class="h-px bg-[#6B686659] mt-3 mb-4"></div>
	<h4 class="text-[#4A4A4A] font-bold">
	  Your credit card details are protected
	</h4>
	<p class="text-[#93949F] text-xs">
	  We integrate with Stripe so that your card details are safe.
	  Seraphique will not have access to your card info.
	</p>
	<div class="mt-3 bg-gradient-to-r p-8 from-seraphique to-[#84B674]
				rounded-lg shadow-md h-[220px]">
	  <div>
		<%= image_tag "payment_processors/visa.png",
					  class: "ms-auto h-4 saturate-0" %>
	  </div>
	  <div class="flex flex-row gap-x-6 mt-8">
		<%= image_tag "credit_card_chip.svg", class: "h-6" %>
		<%= image_tag "credit_card_wave.svg", class: "h-6" %>
	  </div>
	  <div class="flex flex-row text-white items-center text-lg gap-x-4 mt-4">
		<span class="align-bottom mt-1">****</span>
		<span class="align-bottom mt-1">****</span>
		<span class="align-bottom mt-1">****</span>
		<span class="text-sm">0000</span>
	  </div>
	  <div class="space-x-12 text-white mt-1">
		<span class="font-bold">Jane Doe</span>
		<span class="text-sm">00/00</span>
	  </div>
	</div>
	<div class="flex flex-row flex-nowrap gap-x-4 justify-end items-center mt-4">
	  <%= image_tag "payment_processors/visa.png", class: "h-5 saturate-0" %>
	  <%= image_tag "payment_processors/mastercard.svg", class: "h-5" %>
	  <%= image_tag "payment_processors/amex.jpg", class: "h-5 saturate-0" %>
	</div>

	<%= form_with class: "mt-8",
				  model: @payment_card,
				  url: payment_methods_path,
				  method: :post do |f| %>
	  <div>
		<%= f.label :name, "Name on Card", class: "text-[#4A4A4A]" %>
		<%= f.text_field :name,
			class: "w-full mt-2 rounded-md border border-[#B0B0B0] focus:ring-0
                   focus:outline-0 focus:border-seraphique" %>
	  </div>
	  <div class="my-6">
		<%= f.label :number, "Credit Card Number", class: "text-[#4A4A4A]" %>
		<%= f.text_field :number,
		 class: "w-full mt-2 rounded-md border border-[#B0B0B0] focus:ring-0
                    focus:outline-0 focus:border-seraphique",
		 pattern: "\d{4}-\d{4}-\d{4}-\d{4}" %>
	  </div>
	  <div class="flex flex-row gap-x-10">
		<div>
		  <%= f.label :expiration_date, class: "text-[#4A4A4A]" %>
		  <%= f.text_field :expiration_date,
		  class: "w-full mt-2 rounded-md border border-[#B0B0B0] focus:ring-0
                  focus:outline-0 focus:border-seraphique" %>
		</div>
		<div>
		  <%= f.label :cvv, "CVV", class: "text-[#4A4A4A]" %>
		  <%= f.text_field :cvv,
		  class: "w-full mt-2 rounded-md border border-[#B0B0B0] focus:ring-0
                  focus:outline-0 focus:border-seraphique" %>
		</div>
	  </div>
	  <p class="text-[#93949F] my-6 text-xs">
		$1.00 will be deducted for verification.
		It will be refunded within 14 days.
	  </p>
	  <div class="flex flex-row flex-nowrap gap-x-3 justify-end">
		<%= link_to "Cancel",
					payment_methods_path,
					class: "border border-[#B0B0B0] py-2 px-8 rounded-md" %>
		<%= f.submit "Submit",
		class: "bg-seraphique py-2 px-8 rounded-md text-[#FFFFFFCC]" %>
	  </div>
	<% end  %>
  </div>
</main>
