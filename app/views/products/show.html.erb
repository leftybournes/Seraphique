<main class="bg-[#F5F5F5] py-40">
  <div class="container mx-auto">
	<%= render partial: "shared/banner" %>

    <% if notice.present? %>
	  <p class="py-2 px-3 bg-green-50 mb-5 text-seraphique
				font-medium rounded-lg inline-block"
		 id="notice">
		<%= notice %>
	  </p>
	<% end %>

	<section>
	  <%= render @product %>
	</section>

	<section>
	  <%= render partial: "more_information", locals: { product: @product } %>
	</section>

	<section class="mt-16">
	  <%= render partial: "reviews",
				 locals: {
					 reviews: @reviews,
					 review_scores: @review_scores,
					 average: @average_score,
					 total: @total_reviews,
					 pages: @pages
				 } %>
	</section>
  </div>
</main>
