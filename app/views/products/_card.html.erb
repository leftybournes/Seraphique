<div id="<%= dom_id product %>" class="w-[300px]">
  <div class="w-full">
	<div <% if user_signed_in? %>class="relative group"<% end %>>
	  <% if user_signed_in? %>
		<%= link_to new_shopping_cart_item_for_user_path(
			user_id: current_user.id,
			product_id: product.id
		), data: {
			turbo_method: :post,
			turbo_frame: dom_id(current_user, :shopping_cart_count)
		}, class: "w-full h-full absolute hidden top-0 left-0 bg-[#00000099]
                   flex flex-col items-center justify-center w-full
                   h-full group-hover:flex" do %>
		  <%= heroicon "shopping-cart", size: 48, class: "text-gray-100" %>
		  <span class="text-gray-100 font-semibold text-xl">
			Add to Cart
		  </span>
		<% end %>
	  <% end %>
	  <%= image_tag product.image.variant(:thumb),
					class: "border-t border-x border-[#B0B0B0] peer" %>
	</div>
	<div class="w-full bg-white border
				border-[#B0B0B0] p-4">
	  <%= link_to product_path(product) do %>
		<div class="text-xs flex flex-row">
		  <p>
			<span class="font-bold">
			  Seraphique
			</span>
			<%= product.name %>
		  </p>
		</div>
		<div class="text-xs">
		  <%= product.description %>
		</div>
		<div class="text-lg font-light flex flex-row
					flex-nowrap justify-between mt-2">
		  <div class="flex flex-row items-center gap-1">
			<%= heroicon "currency-dollar",
						 size: 18,
						 class: "text-[#4A4A4A]" %>
			<%= number_with_precision(product.price, precision: 2) %>
		  </div>
		  <div class="flex flex-row items-center gap-1">
			<%= heroicon "check", size: 18, class: "text-[#4A4A4A]" %>
			1.5k Sold
		  </div>
		</div>
		<div class="flex flex-row justify-center items-center gap-2 mt-4">
		  <%= heroicon "truck", size: 18, class: "text-[#4A4A4A]"%>
		  <div class="border border-[#B0B0B0] text-[10px] p-1">
			3 - 5 days guaranteed delivery
		  </div>
		</div>
	  <% end %>
	</div>
  </div>
</div>
